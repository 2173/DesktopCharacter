<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopCharacter.View.Tool.Translate"
        xmlns:TranslateVM="clr-namespace:DesktopCharacter.ViewModel.Tool.Translate"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" x:Class="DesktopCharacter.View.Tool.Translate.Translate"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Translate" Height="110" Width="300">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,15,0,0" TextWrapping="Wrap" Text="{Binding Text}" VerticalAlignment="Top" Width="268">
            <i:Interaction.Triggers>
                <ei:KeyTrigger Modifiers="Ctrl" Key="Space">
                    <ei:CallMethodAction/>
                </ei:KeyTrigger>
            </i:Interaction.Triggers>
        </TextBox>
        <Button Content="翻訳" Command="{Binding TranslateCommand}" HorizontalAlignment="Left" Margin="100,45,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
