<UserControl x:Class="DesktopCharacter.View.SettingTab.CodicTab"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopCharacter.View.SettingTab"
        xmlns:SettingVM="clr-namespace:DesktopCharacter.ViewModel.SettingTab"
        xmlns:Behavior="clr-namespace:DesktopCharacter.Util.Behavior"
        mc:Ignorable="d"
        Height="300" Width="300">
    <UserControl.DataContext>
        <SettingVM:CodicSettingTabViewModel></SettingVM:CodicSettingTabViewModel>
    </UserControl.DataContext>
    
    <Grid>
        <Button Content="Codic ログイン" Command="{Binding CodicPageOpenCommand}" HorizontalAlignment="Left" Margin="30,60,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox Text="{Binding TokenTextBox, UpdateSourceTrigger=PropertyChanged}" Behavior:PlaceHolderBehavior.PlaceHolderText="Token" HorizontalAlignment="Left" Margin="30,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240"/>
        <Button Content="トークン登録" Command="{Binding CodicTokenRegister}" HorizontalAlignment="Left" Margin="30,130,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
